.panel.panel-default

  .panel-heading
    %h4= t(:'.forgot_your_password')

  .panel-body
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, role: 'form' }) do |f|
      .form-group
        = f.input :email, autofocus: true, class: 'form-control'
      = f.submit t(:'.send_me_reset_password_instructions'), class: 'btn btn-primary'

= render 'devise/shared/links'
