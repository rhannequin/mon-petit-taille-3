.panel.panel-default

  .panel-heading
    %h4= t(:'.sign_up')

  .panel-body
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f|
      .form-group
        = f.input :name, autofocus: true, class: 'form-control'
      .form-group
        = f.input :email, autofocus: true, class: 'form-control'
      .form-group
        = f.input :password, autocomplete: 'off', class: 'form-control'
      .form-group
        = f.input :password_confirmation, autocomplete: 'off', class: 'form-control'
      = f.submit t(:'.sign_up'), class: 'btn btn-primary'

= render 'devise/shared/links'
